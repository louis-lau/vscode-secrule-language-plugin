{
  "name": "secrules-syntax",
  "displayName": "SecRules Syntax Highlighting",
  "description": "Provides syntax highlighting and hover documentation for ModSecurity SecRules.",
  "version": "0.2.0",
  "publisher": "Louis",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:secrules"
  ],
  "contributes": {
    "languages": [
      {
        "id": "secrules",
        "aliases": [
          "SecRules",
          "secrules"
        ],
        "extensions": [
          ".secrules",
          ".conf"
        ],
        "configuration": "./languages/secrules.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "secrules",
        "scopeName": "source.secrules",
        "path": "./syntaxes/secrules.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.50.0",
    "@vscode/vsce": "^2.0.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0",
    "vscode-tmgrammar-test": "^0.1.3"
  }
}
